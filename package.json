{
  "name": "clip-font-app",
  "version": "1.0.0",
  "description": "clip font",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "build": "electron-builder",
    "build:dir": "electron-builder --dir"
  },
  "author": "yoki",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "qs": "^6.7.0"
  },
  "devDependencies": {
    "electron": "^4.1.1",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "productName": "clip-font-app",
    "appId": "Personal.DesktopApp.ClipFont.1.0.0",
    "directories": {
      "output": "dist"
    },
    "files": [
      "./**/**"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/images/icon.ico",
      "uninstallerIcon": "src/images/icon.ico",
      "installerHeaderIcon": "src/images/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClipFont"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "src/images/icon.icns"
    },
    "win": {
      "icon": "src/images/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/images"
    },
    "electronDownload": {
      "mirror": "http://npm.taobao.org/mirrors/electron/"
    }
  }
}
